{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@devterm-toolbox/electron/*": [
        "../electron/*"
      ],
      "@devterm-toolbox/frontend/*": [
        "../frontend/*"
      ],
      "@devterm-toolbox/web/*": [
        "../web/*"
      ]
    }
  },
  "vueCompilerOptions": {
    "experimentalCompatMode": 2,
    "experimentalTemplateCompilerOptions": {
      "compatConfig": {
        "MODE": 2
      }
    }
  },
  "exclude": [
    "node_modules"
  ]
}
